<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: '100x100' %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>フォロー<%= link_to user_followings_path(user.id) do %><%= user.followings.count %><% end %></th>
      <th>フォロワー<%= link_to user_followers_path(user.id) do %><%= user.followers.count %><% end %></th>
    </tr>
  </tbody>
</table>
<% if current_user.id != user.id %>
<div class="row py-3">
  <%= render "relationships/follow-button", user: user %>
</div>
<% end %>
<div class="row">
  <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
</div>