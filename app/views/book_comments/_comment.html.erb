<% book.book_comments.each do |book_comment| %>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(book.user.id) do %>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: '50x50' %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment),
      class: "btn btn-sm btn-danger", method: :delete, remote: true %></td>
    </tr>
  </tbody>
<% end %>