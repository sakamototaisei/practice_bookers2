<div class="col-md-8 offset-md-1">
  <h2>Group</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
        <th>メンバー数</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= attachment_image_tag(group, :image, :full, 50, 50, fallback: "no_image.jpg", size: '50x50') %></td>
          <td><%= link_to group.name, group_path(group) %></td>
          <!--<td><#%= group.user ? group.user.name : "不明" %>が<i class="far fa-clock"><#%= group.created_at.strftime('%Y/%m/%d') %>に作成</i></td>-->
          <td><%= group.introduction %></td>
          <td><%= group.users.count %></td>
          <td>
            <% if group.owner_id == current_user.id %>
              <%= link_to "Edit", edit_group_path(group), class: "btn btn-sm btn-success" %>
              <%= link_to "Destroy", group_all_destroy_path(group), method: :delete,
              data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>